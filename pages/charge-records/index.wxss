.container{
	font-size: 26rpx;
	background: #fff77b;
}
.avater-container{
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 40rpx 0;
	background: -webkit-gradient(linear, 0 0, 0 100%, from(#ffda8b), to(#fff77b));
	background: -moz-linear-gradient(top, #ffda8b, #fff77b);
	background: linear-gradient(top,#fff77b,#ffda8b);
	box-sizing: border-box;
}
.avater{
	display: block;
	width: 160rpx;
	height: 160rpx;
	border-radius: 50%;
	background: #d9d9d9;
	border: 1px solid #d9d9d9;
	box-sizing: border-box;
}
.none-avater{
	display: flex;
	align-items: center;
	justify-content: center;
	color: #fff;
	width: 160rpx;
	height: 160rpx;
	border-radius: 50%;
	background: #d9d9d9;
	border: 1px solid #d9d9d9;
	box-sizing: border-box;
}

.records-container{
	display: block;
	padding: 0 50rpx;
	border-top-left-radius: 20rpx;
	border-top-right-radius: 20rpx;
	box-shadow:0 0 18rpx 0 rgba(0,0,0,.35);
	background: #fff;
	flex:1;
	height: 930rpx;
	box-sizing: border-box;
}
::-webkit-scrollbar {  
  width: 0;  
  height: 0;  
  color: transparent;  
} 
.item-container{
	display: flex;
	padding: 30rpx 0;
	flex-direction: row;
	align-items: center;
	justify-content: space-between;
	box-sizing: border-box;
}
.item-container:not(:last-child){
	border-bottom: 1px solid #cdcdcd;
}
.decoration{
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 50rpx 0;
	color: #cdcdcd;
	box-sizing:border-box;
}
.decoration::before{
	content: '';
	display: inline-block;
	height: 1px;
	width: 150rpx;
	background: #cdcdcd;
	margin-right: 40rpx;
}
.decoration::after{
	content: '';
	display: inline-block;
	height: 1px;
	width: 150rpx;
	background: #cdcdcd;
	margin-left: 40rpx;
}
.service-img{
	display: block;
	width: 63rpx;
	height: 63rpx;
	border-radius: 50%;
}
.services-name{
	color: #449bff;
	font-size: 26rpx;
	margin-top: 5rpx;
	text-align: center;
}
.message-box{
	margin-left: 40rpx;
	flex: 1;
}
.message-main{
	font-size: 28rpx;
	color: #333;
}
.message-vice{
	font-size: 24rpx;
	color: #cdcdcd;
	margin-top: 12px;
}
.price-box{
	font-size: 36rpx;
	color: #333;
}
